extends layout

block content
  h1= title
  p Welcome to #{title}
  p This is Bishal Adhikari 
  button(type="button", class="btn btn-dark", onclick="goFaster()") Press me
  p
  div(id="faster") Increase the speed
  script.
    var mph = 20;
    var change = 1;

    function goFaster() {
      mph += change;
      change++;
      document.getElementById("faster").innerHTML = 'MPH ' + mph + ' with change ' + change;
      a(href="/books") View Books Results
    }
